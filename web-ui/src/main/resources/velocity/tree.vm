<!doctype html>
<html>
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.3/themes/default/style.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/vis/4.16.1/vis.min.css" rel="stylesheet" type="text/css" />

    <style type="text/css">
        #sos-graph {
            /*width: 1200px;*/
            height: 400px;
            border: 1px solid lightgray;
        }
    </style>

</head>
<body>

<div class="container-fluid">
    <h3>Node GUID: ${node_id}</h3>
    <br>
    <div class="row">
        <div class="col-sm-8">
            <div id="jstree">
            </div>
        </div>
        <div class="col-sm-4">
            <div id="sos-graph"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <h2>Manifest</h2>
            <pre id="manifest" style="word-wrap: break-word;"></pre>
        </div>
        <div class="col-sm-4">
            <h2>Data</h2>
            <pre id="data" style="word-wrap: break-word;"></pre>
        </div>
        <div class="col-sm-4">
            <h2>Metadata</h2>
            <pre id="metadata" style="word-wrap: break-word;"></pre>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.3/jstree.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/vis/4.16.1/vis.min.js"></script>

<script>
    $(function () {
        $('#jstree').jstree({
            'plugins': ["wholerow", "unique"],
            'core' : { ${tree} } });

        $('#jstree').on("changed.jstree", function (e, data) {
            $('#manifest').html('');
            $('#metadata').html('');

            $.get("/graph/data/" + data.selected[0] , function(data) {
                $('#data').html(data);
            })

            // TODO - call only on interaction with graph
            // TODO - get metadata

            // TODO - show relevant graph
            $.get("/graph/" + data.selected[0] , function(data) {
                data = JSON.parse(data);
                var nodes = new vis.DataSet(data['nodes']);
                var edges = new vis.DataSet(data['edges']);

                // create a network
                var container = $('#sos-graph')[0];
                var graphData = {
                    nodes: nodes,
                    edges: edges
                };
                var options = {
                    layout: {
                        improvedLayout:true
                    }
                };

                var network = new vis.Network(container, graphData, options);

                // FIXME - code below won't work, need to adapt to this page
                network.on("click", function (params) {
                    id = params['nodes'][0];
                    $.get("/graph/manifest/" + id , function(data) {
                        $('#manifest').html(data);
                    })

                    // FIXME - different behaviour, data for given manifest!
//                    $.get("/graph/data/" + id , function(data) {
//                        $('#data').html(data);
//                    })
                });
            })

        });

    });
</script>

</body>
</html>
