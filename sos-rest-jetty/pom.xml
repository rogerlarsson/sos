    <groupId>uk.ac.standrews.cs.sos</groupId>
    <artifactId>rest-jetty</artifactId>
    <packaging>jar</packaging>

    <properties>
        <jersey.version>2.23</jersey.version>
        <jetty.version>9.2.10.v20150310</jetty.version>
